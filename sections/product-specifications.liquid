{% schema %}
{
  "name": "Product Specifications",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Product Specifications"
    }
  ],
  "blocks": [
    {
      "type": "specification",
      "name": "Specification",
      "settings": [
        {
          "type": "text",
          "id": "spec_label",
          "label": "Specification Label",
          "default": "Label"
        },
        {
          "type": "text",
          "id": "spec_value",
          "label": "Specification Value",
          "default": "Value"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Specifications",
      "blocks": [
        {
          "type": "specification"
        },
        {
          "type": "specification"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="product-specifications section">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="section-title">{{ section.settings.title }}</h2>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="specifications-grid">
        {% for block in section.blocks %}
          {% if block.type == 'specification' %}
            <div class="specification-item" {{ block.shopify_attributes }}>
              <div class="spec-label">{{ block.settings.spec_label }}</div>
              <div class="spec-value">{{ block.settings.spec_value }}</div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .product-specifications {
    padding: 60px 0;
  }

  .section-title {
    text-align: center;
    margin-bottom: 40px;
  }

  .specifications-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin: 0 auto;
  }

  .specification-item {
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 4px;
  }

  .spec-label {
    font-weight: bold;
    margin-bottom: 5px;
  }

  .spec-value {
    color: #666;
  }

  @media screen and (max-width: 749px) {
    .product-specifications {
      padding: 40px 0;
    }

    .specifications-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
