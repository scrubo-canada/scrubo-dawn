{% style %}
  .product-specifications {
    padding: 3em 0;
  }

  .specifications-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 0 20px;
    margin: 0 auto;
  }

  .spec-label {
    margin: 0.4em 0;
  }

  .spec-value {
    color: #666;
  }

  .specification-item {
    display: flex;
    align-items: baseline;
    gap: 10px;
  }

  @media screen and (max-width: 749px) {
    .product-specifications {
      padding: 40px 0;
    }

    .specifications-grid {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="product-specifications section">
  <div class="page-width color-{{ section.settings.section_color_scheme }}">
    {% if section.settings.title != blank %}
      <h2 class="section-title {{ section.settings.heading_size }}">{{ section.settings.title }}</h2>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="specifications-grid">
        {% for block in section.blocks %}
          {% if block.type == 'specification' and block.settings.spec_value != blank %}
            <div class="specification-item" {{ block.shopify_attributes }}>
              <h3 class="spec-label">{{ block.settings.spec_label }}</h3>
              <div class="spec-value">{{ block.settings.spec_value }}</div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Product Specifications",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Product Specifications"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "specification",
      "name": "Specification",
      "settings": [
        {
          "type": "text",
          "id": "spec_label",
          "label": "Specification Label",
          "default": "Label"
        },
        {
          "type": "text",
          "id": "spec_value",
          "label": "Specification Value",
          "default": "Value"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Specifications",
      "blocks": [
        {
          "type": "specification",
          "settings": {
            "spec_label": "Cleaning Path",
            "spec_value": "{{ product.metafields.custom.cleaning_path.value }}"
          }
        },
        {
          "type": "specification",
          "settings": {
            "spec_label": "Brush Diameter",
            "spec_value": "{{ product.metafields.custom.brush_diameter.value }}"
          }
        },
        {
          "type": "specification",
          "settings": {
            "spec_label": "Estimated Coverage",
            "spec_value": "{{ product.metafields.custom.estimated_coverage.value }}"
          }
        },
        {
          "type": "specification",
          "settings": {
            "spec_label": "Estimated Run Time",
            "spec_value": "{{ product.metafields.custom.estimated_run_time.value }}"
          }
        },
        {
          "type": "specification",
          "settings": {
            "spec_label": "Battery",
            "spec_value": "{{ product.metafields.custom.battery.value }}"
          }
        },
        {
          "type": "specification",
          "settings": {
            "spec_label": "Brush Motor",
            "spec_value": "{{ product.metafields.custom.brush_motor.value }}"
          }
        },
        {
          "type": "specification",
          "settings": {
            "spec_label": "Vacuum Motor",
            "spec_value": "{{ product.metafields.custom.vacuum_motor.value }}"
          }
        },
        {
          "type": "specification",
          "settings": {
            "spec_label": "Solution Tank Capacity",
            "spec_value": "{{ product.metafields.custom.solution_tank_capacity.value }}"
          }
        },
        {
          "type": "specification",
          "settings": {
            "spec_label": "Recovery Tank Capacity",
            "spec_value": "{{ product.metafields.custom.recovery_tank_capacity.value }}"
          }
        },
        {
          "type": "specification",
          "settings": {
            "spec_label": "Squeegee Width",
            "spec_value": "{{ product.metafields.custom.squeegee_width.value }}"
          }
        },
        {
          "type": "specification",
          "settings": {
            "spec_label": "Weight",
            "spec_value": "{{ product.metafields.custom.weight.value }}"
          }
        }
      ]
    }
  ]
}
{% endschema %}
