{% doc %}
  @prompt
    Create a two-column section where each column can contain other sections nested inside it. The section should be flexible and allow merchants to add, remove, and customize content blocks within each column independently. Include settings to control column width distribution and spacing between columns.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-two-column-container-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-two-column-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.horizontal_padding }}px;
  }

  .ai-two-column-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: {{ block.settings.left_column_width }}% {{ 100 | minus: block.settings.left_column_width }}%;
    gap: {{ block.settings.column_gap }}px;
    align-items: {{ block.settings.vertical_alignment }};
  }

  .ai-two-column-left-{{ ai_gen_id }},
  .ai-two-column-right-{{ ai_gen_id }} {
    padding: {{ block.settings.column_padding }}px;
    background-color: {{ block.settings.column_background_color }};
    border-radius: {{ block.settings.column_border_radius }}px;
  }

  .ai-two-column-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
  }

  .ai-two-column-content-{{ ai_gen_id }} h2 {
    margin-top: 0;
    margin-bottom: 16px;
    color: {{ block.settings.heading_color }};
  }

  .ai-two-column-content-{{ ai_gen_id }} p {
    margin-bottom: 16px;
  }

  .ai-two-column-content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-two-column-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-two-column-image-wrapper-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.image_spacing }}px;
  }

  .ai-two-column-image-wrapper-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-two-column-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-two-column-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-two-column-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: 6px;
    margin-top: 16px;
    transition: background-color 0.3s ease;
  }

  .ai-two-column-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-two-column-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_column_gap }}px;
    }

    {% if block.settings.reverse_columns_mobile %}
      .ai-two-column-grid-{{ ai_gen_id }} {
        display: flex;
        flex-direction: column-reverse;
      }
    {% endif %}

    .ai-two-column-container-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_padding_top }}px 0 {{ block.settings.mobile_padding_bottom }}px;
    }

    .ai-two-column-wrapper-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.mobile_horizontal_padding }}px;
    }

    .ai-two-column-left-{{ ai_gen_id }},
    .ai-two-column-right-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_column_padding }}px;
    }
  }
{% endstyle %}

<two-column-layout-{{ ai_gen_id }} class="ai-two-column-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-two-column-wrapper-{{ ai_gen_id }}">
    <div class="ai-two-column-grid-{{ ai_gen_id }}">
      <div class="ai-two-column-left-{{ ai_gen_id }}">
        {% if block.settings.left_image %}
          <div class="ai-two-column-image-wrapper-{{ ai_gen_id }}">
            <img
              src="{{ block.settings.left_image | image_url: width: 1000 }}"
              alt="{{ block.settings.left_image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.left_image.width }}"
              height="{{ block.settings.left_image.height }}"
              class="ai-two-column-image-{{ ai_gen_id }}"
            >
          </div>
        {% endif %}

        <div class="ai-two-column-content-{{ ai_gen_id }}">
          {% if block.settings.left_heading != blank %}
            <h2>{{ block.settings.left_heading }}</h2>
          {% endif %}

          {% if block.settings.left_content != blank %}
            {{ block.settings.left_content }}
          {% endif %}

          {% if block.settings.left_button_text != blank and block.settings.left_button_link != blank %}
            <a href="{{ block.settings.left_button_link }}" class="ai-two-column-button-{{ ai_gen_id }}">
              {{ block.settings.left_button_text }}
            </a>
          {% endif %}
        </div>

        {% if block.settings.left_image == blank and block.settings.left_heading == blank and block.settings.left_content == blank %}
          <div class="ai-two-column-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>

      <div class="ai-two-column-right-{{ ai_gen_id }}">
        {% if block.settings.right_image %}
          <div class="ai-two-column-image-wrapper-{{ ai_gen_id }}">
            <img
              src="{{ block.settings.right_image | image_url: width: 1000 }}"
              alt="{{ block.settings.right_image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.right_image.width }}"
              height="{{ block.settings.right_image.height }}"
              class="ai-two-column-image-{{ ai_gen_id }}"
            >
          </div>
        {% endif %}

        <div class="ai-two-column-content-{{ ai_gen_id }}">
          {% if block.settings.right_heading != blank %}
            <h2>{{ block.settings.right_heading }}</h2>
          {% endif %}

          {% if block.settings.right_content != blank %}
            {{ block.settings.right_content }}
          {% endif %}

          {% if block.settings.right_button_text != blank and block.settings.right_button_link != blank %}
            <a href="{{ block.settings.right_button_link }}" class="ai-two-column-button-{{ ai_gen_id }}">
              {{ block.settings.right_button_text }}
            </a>
          {% endif %}
        </div>

        {% if block.settings.right_image == blank and block.settings.right_heading == blank and block.settings.right_content == blank %}
          <div class="ai-two-column-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</two-column-layout-{{ ai_gen_id }}>

<script>
  (function() {
    class TwoColumnLayout{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('two-column-layout-{{ ai_gen_id }}', TwoColumnLayout{{ ai_gen_id }});
  })();
</script>

