{% doc %}
  @prompt
    black friday sale banner where I can change the text
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-bf-banner-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-bf-banner__content-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: {{ block.settings.text_alignment }};
    gap: 12px;
    flex-wrap: wrap;
  }

  .ai-bf-banner__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    margin: 0;
    line-height: 1.4;
  }

  .ai-bf-banner__link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    transition: opacity 0.2s ease;
  }

  .ai-bf-banner__link-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  @media screen and (max-width: 749px) {
    .ai-bf-banner-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.8 }}px {{ block.settings.padding_horizontal | times: 0.8 }}px;
    }

    .ai-bf-banner__content-{{ ai_gen_id }} {
      justify-content: center;
    }

    .ai-bf-banner__text-{{ ai_gen_id }},
    .ai-bf-banner__link-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-bf-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-bf-banner__content-{{ ai_gen_id }}">
    {% if block.settings.banner_text != blank %}
      <p class="ai-bf-banner__text-{{ ai_gen_id }}">{{ block.settings.banner_text }}</p>
    {% endif %}
    {% if block.settings.link_text != blank and block.settings.link_url != blank %}
      <a href="{{ block.settings.link_url }}" class="ai-bf-banner__link-{{ ai_gen_id }}">
        {{ block.settings.link_text }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Black Friday banner",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "banner_text",
      "label": "Banner text",
      "default": "Black Friday Sale - Up to 50% Off!"
    },
    {
      "type": "inline_richtext",
      "id": "link_text",
      "label": "Link text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 16
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1400,
      "step": 100,
      "unit": "px",
      "label": "Maximum width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "min": 8,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Vertical padding",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "min": 8,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Horizontal padding",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Black Friday banner"
    }
  ]
}
{% endschema %}
